-activities.each do |activity|
  =activity.text
  =link_to activity.owner.to_s, user_path(activity.owner)
  =timeago_tag(activity.updated_at, :nojs => true, :limit => 10.days.ago)
  %ul
    -if activity.parameters.size > 0
      -activity.parameters.each do |p|
        %li 
          %strong= p[0].to_s.gsub(/_/, ' ').capitalize
          =link_to(" ##{activity.trackable.id}", project_issue_path(:project_id => @project, :id => activity.trackable.id))
          set to
          %i=truncate(sanitize(p[1].to_s, :tags => []), :length => 30)
