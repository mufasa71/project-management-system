- @modal = capture do
  .modal#new_time_entry
    .modal-header
      = button_tag 'Ã—', :class => "close", "data-dismiss" => "modal"
      %h3 Add time log
    .modal-body
      %p
        = simple_form_for([@issue.project, @issue, @time_entry], :html => {:class => "form-vertical"}, :remote => true) do |f|
          = render :partial => "time_entries/form", :locals => { :f => f }
          .modal-footer
            %a.btn{:href => "#", "data-dismiss" => "modal"} Close
            = f.button :submit, "Save", :class => "btn btn-success"

:plain
  $('#new_time_entry').modal('hide');
  $('#new_time_entry').remove();
  $('body').append("#{escape_javascript @modal}");
  $('#new_time_entry').modal('show');


