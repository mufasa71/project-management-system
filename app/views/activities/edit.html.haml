=render 'common/project_tabs'
.row
  .span12
    %h3 Edit Activity
    = nested_form_for([@project, @phase, @activity], :html => { :class => "form-horizontal" }) do |f|
      = render :partial => 'form', :locals => { :f => f }
      .form-actions
        = f.button :submit, :class => "btn btn-success"
