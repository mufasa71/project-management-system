= simple_form_for @project, :html => { :class => 'form-horizontal' } do |f|
  = render :partial => "projects/form", :locals => { :f => f }
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to "Delete Project", project_path(@project), :method => :delete, :class => "btn btn-danger", :confirm => "Project will be permanently deleted! Are you sure?" 
