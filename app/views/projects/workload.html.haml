=render 'common/project_tabs'
.row
  .span12
    = image_tag "images/pdf.jpg", :size => "32x32"
    = link_to " Download PDF", workload_project_path(@project, :format => :pdf), :class => "btn btn-info icon-download"
    %table.table
      %thead
        %tr
          %th Components/Students
          - @project.members.each do |member|
            %th= member
      %tbody
        - @project.phases.each do |phase|
          %tr
            %td= phase.title
            - @project.members.each do |member|
              %td= member.workload_for(phase)

