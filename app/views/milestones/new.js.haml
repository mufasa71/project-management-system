- @modal = capture do
  .modal#new_milestone
    .modal-header
      = button_tag 'Ã—', :class => "close", "data-dismiss" => "modal"
      %h3 New milestone
    .modal-body
      %p
        = simple_form_for([@project, @milestone], :html => {:class => "form-vertical"}, :remote => true) do |f|
          = render :partial => "form", :locals => { :f => f }
          .modal-footer
            %a.btn{:href => "#", "data-dismiss" => "modal"} Close
            = f.button :submit, "Save", :class => "btn btn-success"

:plain
  $('#new_milestone').modal('hide');
  $('#new_milestone').remove();
  $('body').append("#{escape_javascript @modal}");
  $('#new_milestone').modal('show');
