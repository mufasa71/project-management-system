= simple_form_for @project, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :identifier
  = f.input :homepage
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), project_path, :class => 'btn'
