- model_class = Role.new.class
%h3=t '.title', :default => model_class.model_name.human.pluralize
/= link_to t('.new', :default => t("helpers.links.new")), new_admin_role_path, :class => 'btn btn-primary'
%table.table.table-striped#roles
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th Project
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @roles.each do |role|
      %tr
        %td= link_to role.id, admin_role_path(role)
        %td= role.name
        %td= role.project
        %td=l role.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_role_path(role), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_role_path(role), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

