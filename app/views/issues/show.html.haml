=render 'common/project_tabs'
.row
  .span10.well
    #issue
      %h3=@issue.subject
      %p.added_by Added by #{@issue.author} #{timeago_tag @issue.created_at, :nojs => true, :limit => 10.days.ago} 
      =link_to " Update | ", edit_project_issue_path(:project_id => @issue.project, :id => @issue), :class => "icon-pencil"
      =link_to " Delete", project_issue_path(:project_id => @issue.project, :id => @issue), :class => "icon-trash", :method => :delete
      -present @issue do |issue_presenter|
        .span4
          %dl.dl-horizontal.issue
            %dt Status:
            %dd= issue_presenter.status
            %dt Priority:
            %dd= issue_presenter.priority
            %dt Assignee:
            %dd= issue_presenter.assignee
            %dt Category:
            %dd= issue_presenter.category
        .span4
          %dl.dl-horizontal
            %dt Start date:
            %dd= issue_presenter.start_date
            %dt Due date:
            %dd= issue_presenter.due_date
            %dt % Done:
            %dd= issue_presenter.done
.row
  .span10.well
    %h3 History
    -@activities.each do |activity|
      =activity.text
      =link_to activity.owner.to_s, user_path(activity.owner)
      =timeago_tag(activity.updated_at, :nojs => true, :limit => 10.days.ago)
      %ul
        -if activity.parameters.size > 0
          -activity.parameters.each do |p|
            %li 
              %strong= p[0].to_s.gsub(/_/, ' ').capitalize
              set to
              %i=truncate(sanitize(p[1], :tags => []), :length => 30)
      %br
