!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Academic Project Management System"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = stylesheet_link_tag "application", :media => "all"
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
    = yield :head
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
            %a.brand{:href => root_path}
              %img{:src => "/assets/logo.jpg"}
            %a.brand{:href => root_path} APMS for APIIT Students
          .container.nav-collapse
            %ul.nav
              %li= link_to "Projects", projects_path
              %li= link_to "Users", users_path
              %li= link_to "Intakes", intakes_path
              %form.navbar-search.pull-right
                %input{ :type => "text", :class => "search-query", :placeholder => "Search project here" }
            %ul.nav.pull-right
              %li.divider-vertical
              %li.dropdown
                %a.dropdown-toggle{ "data-toggle" => "dropdown", :href => "#" }
                  Account
                  %b.caret
                %ul.dropdown-menu
                  -if user_signed_in?
                    %li.account-email
                      = link_to edit_user_registration_path do
                        %i{ :class => "icon-user" }
                        My account
                    %li
                      = link_to messages_path do
                        %i{ :class => "icon-comment" }
                        Messages
                        -if current_user.receipts.inbox.unread.any?
                          %span{ :class => "badge badge-info" } #{current_user.receipts.inbox.unread.size}
                    %li
                      = link_to current_user do
                        %i{ :class => "icon-list-alt" }
                        My Tasks
                    %li= link_to "Admin page", admin_home_index_path if current_user.admin? 
                    %li.divider
                    %li
                      = link_to destroy_user_session_path, :method => :delete do
                        %i{ :class => "icon-off" }
                        Sign out
                  -else
                    %li= link_to "Sign in", new_user_session_path
                    %li.divider
                    %li= link_to "Sign up", new_user_registration_path
          / /.nav-collapse
    .container
      .content
        .row
          .span12
            #flash
              =render :partial => 'common/flash', :object => flash
            = yield
          / /span
        / /row
      / /content
      %footer
        %p &copy; Project Management System for APIIT 2012
    / /container
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
    = yield :javascript

